<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
<RelativeLayout
    android:layout_width="50dp"
    android:layout_height="50dp">
    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/iv_item_head"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user" />
    <ImageView
        android:id="@+id/iv_small_red_cycle_in_item"
        android:layout_alignRight="@id/iv_item_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/small_red_cycle"/>
    <TextView
        android:layout_alignParentRight="true"
        style="@style/red_cycle_style"
        android:id="@+id/tv_red_cycle_in_session"
        />
</RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="200dp"
            android:textColor="#DD000000"
            android:id="@+id/tv_item_nick_name"
            android:textSize="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的好友"/>
        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/tv_item_chat_msg"
            android:layout_below="@+id/tv_item_nick_name"
            android:layout_width="wrap_content"
            android:maxWidth="250dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:ellipsize="end"
            android:singleLine="true"
           />
        <TextView
            android:id="@+id/tv_item_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            />
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/iv_no_tip"
            android:layout_marginRight="5dp"
            android:src="@drawable/no_tip32"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_item_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>