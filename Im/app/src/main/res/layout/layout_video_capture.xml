<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp">

        <SurfaceView
            android:id="@+id/sv_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_video_tip_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@color/background"
            android:drawableLeft="@drawable/up_arror16"
            android:text="上滑取消"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_video_tip_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:background="@color/light_red"
            android:text="松开取消"
            android:textColor="@color/foreground"
            android:textSize="18sp"
            android:visibility="gone" />

        <com.cst14.im.layoutView.DynaicLine
            android:id="@+id/dl_time_line"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true" />

        <RelativeLayout
            android:id="@+id/rl_vdo_pre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <ImageView
                android:id="@+id/iv_vdo_pre_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/vdo_pre64" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_vdo_pre_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="准备中..."
                android:textColor="#FFF"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_video_begin"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_video_begin"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:text="按住拍"
            android:textColor="@color/green"
            android:textSize="26sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_video_menu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:src="@drawable/video_menu64" />
</RelativeLayout>
