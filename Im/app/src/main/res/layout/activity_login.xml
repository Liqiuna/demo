<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/touxiang64"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/iv_head" />
<LinearLayout
    android:gravity="center_horizontal"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="用户名"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="20sp"
            android:id="@+id/ed_login_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="账号/手机号码/邮箱"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="密码"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="textPassword"
            android:textSize="20sp"
            android:id="@+id/ed_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tip" />
    <CheckBox
        android:id="@+id/cb_mima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_login_pwd"
        android:layout_marginLeft="12dip"
        android:text="记住密码"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/cb_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb_mima"
        android:layout_marginLeft="12dip"
        android:text="自动登录"
        android:textColor="#000000" />
    <Button
        android:id="@+id/login"
        android:background="@drawable/login_btn_selector"
        android:onClick="login"
        android:layout_marginTop="30dp"
        android:text="登录"
        android:layout_width="300dp"
        android:layout_height="match_parent" />


</LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="450dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/login_question_opt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录遇到问题？"
            android:textColor="@color/blue"
            android:layout_marginLeft="98dp"
            />
        <TextView
            android:id="@+id/login_more_opt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="128dp"
            android:text="更多"
            android:textColor="@color/blue"
            />
    </LinearLayout>
    <Button

        android:background="@null"
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_Regist" />

</RelativeLayout>
