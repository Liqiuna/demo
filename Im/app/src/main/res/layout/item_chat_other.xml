<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_touxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/touxiang32" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/up_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_touxiang"
        android:background="@drawable/chat_l_selector"
        android:paddingBottom="8dp"
        android:paddingLeft="13dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <RelativeLayout
            android:id="@+id/rl_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_chat_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:textColor="#000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_voice_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/voice32_r_1"
                android:visibility="invisible" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_voice_len"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/up_container"
        android:text="12"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_voice_red_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_voice_len"
        android:background="@drawable/small_red_cycle"
        android:visibility="invisible" />

</RelativeLayout>