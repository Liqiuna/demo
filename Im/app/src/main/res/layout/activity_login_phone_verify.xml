<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_phone_verify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    tools:context="com.cst14.im.activity.LoginPhoneVerifyActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:background="@drawable/selectdate_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="#353535"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/phone_login_et"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="phone" />
        <Button
            android:id="@+id/login_request_code_btn"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
              android:background="@color/gray"
            android:text="获取验证码" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:background="@drawable/selectdate_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="验证码"
            android:textColor="#353535"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/login_input_code_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="请输入验证码"
            android:ems="6"
            android:inputType="number" >
        </EditText>

    </LinearLayout>
    <Button
        android:id="@+id/phone_bind_bn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/green"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        android:text="登录" />


</LinearLayout>
