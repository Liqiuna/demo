<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:gravity="center"
    android:padding="25dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/customer_dialog_bk_selector">

        <TextView
            android:id="@+id/tv_dlg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="标题"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/tv_dlg_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dlg_title"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_dlg_biaoqing_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_menu_item_bg_selector">

                <TextView
                    android:id="@+id/tv_dlg_biaoqing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="标清"
                    android:textColor="#000"
                    android:textSize="20sp" />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_biaoqing_choose"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/choose32"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_dlg_yuantu_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_menu_item_bg_selector">

                <TextView
                    android:id="@+id/tv_dlg_yuantu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="原图"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_yuantu_choose"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/choose32"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@id/tv_dlg_list"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dlg_list"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/tv_dlg_postive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/customer_dialog_btn_l_selector"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="13dp"
                android:singleLine="true"
                android:text="确认"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/tv_dlg_negative"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/customer_dialog_btn_r_selector"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="13dp"
                android:singleLine="true"
                android:text="取消"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>