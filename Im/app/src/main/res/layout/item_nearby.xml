<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_head"
        android:src="@drawable/default_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp" />


    <LinearLayout
        android:id="@+id/ly_nick_dis_time"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nick"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxWidth="140dp"
            android:textColor="@android:color/background_dark"
            android:layout_gravity="center_vertical" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="distance"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/tv_recentTime"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_recentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="recentTime"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_age_man"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/man"
        android:background="@android:color/holo_blue_bright"
        android:text="16"
        android:textSize="13sp"
        android:paddingStart="3dp"
        android:textColor="@color/white"
        android:layout_alignLeft="@+id/ly_nick_dis_time"
        android:layout_below="@+id/ly_nick_dis_time"
        android:layout_marginTop="3dp"
        android:gravity="center" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_age_woman"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/woman"
        android:background="@color/pink"
        android:text="16"
        android:textSize="13sp"
        android:paddingStart="3dp"
        android:textColor="@color/white"
        android:layout_alignLeft="@+id/ly_nick_dis_time"
        android:layout_below="@+id/ly_nick_dis_time"
        android:layout_marginTop="3dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="personal introduction"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignLeft="@+id/tv_age_man"
        android:layout_below="@+id/tv_age_man"
        android:layout_marginTop="5dp" />



</RelativeLayout>