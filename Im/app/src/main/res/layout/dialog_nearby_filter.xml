<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="340dp">

    <TextView
        android:id="@+id/tv_all"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="性别"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"/>

    <RelativeLayout
        android:id="@+id/ly_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_all"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_sex_all_gray"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:text="全部"
            android:textSize="16sp"
            android:layout_marginLeft="35dp"
            android:gravity="center" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_sex_all_blue"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:text="全部"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:background="@drawable/textview_shape_border"/>

        <TextView
            android:id="@+id/tv_sex_man_gray"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:drawableLeft="@drawable/man_gray"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="男"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/tv_sex_all_gray"
            android:layout_marginLeft="50dp"
            android:gravity="center"/>

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_sex_man_blue"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:drawableLeft="@drawable/man_blue"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="男"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/tv_sex_all_gray"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:background="@drawable/textview_shape_border"/>

        <TextView
            android:id="@+id/tv_sex_woman_gray"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:drawableLeft="@drawable/woman_gray"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="女"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/tv_sex_man_gray"
            android:layout_marginLeft="50dp"
            android:gravity="center"/>

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_sex_woman_blue"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:drawableLeft="@drawable/woman_blue"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="女"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/tv_sex_man_gray"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:background="@drawable/textview_shape_border"/>

    </RelativeLayout>

    <View
        android:id="@+id/v_divide"
        android:background="@color/devide_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ly_sex"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_active"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="活跃"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/v_divide" />
    
    <RelativeLayout
        android:id="@+id/ly_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_active"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_fifteen_minute_gray"
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="15分钟"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:gravity="center" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_fifteen_minute_blue"
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="15分钟"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:background="@drawable/textview_shape_border"/>

        <TextView
            android:id="@+id/tv_sixty_minute_gray"
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="60分钟"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_fifteen_minute_gray" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_sixty_minute_blue"
            android:layout_width="65dp"
            android:layout_height="32dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="60分钟"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:background="@drawable/textview_shape_border"
            android:layout_toRightOf="@+id/tv_fifteen_minute_gray" />

        <TextView
            android:id="@+id/tv_one_day_gray"
            android:layout_width="55dp"
            android:layout_height="32dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="1天"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_sixty_minute_gray" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_one_day_blue"
            android:layout_width="55dp"
            android:layout_height="32dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="1天"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:background="@drawable/textview_shape_border"
            android:layout_toRightOf="@+id/tv_sixty_minute_gray" />

        <TextView
            android:id="@+id/tv_three_day_gray"
            android:layout_width="55dp"
            android:layout_height="32dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="3天"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/tv_one_day_gray" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_three_day_blue"
            android:layout_width="55dp"
            android:layout_height="32dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="3天"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:background="@drawable/textview_shape_border"
            android:layout_toRightOf="@+id/tv_one_day_gray" />
        
    </RelativeLayout>

    <View
        android:id="@+id/v_divide2"
        android:background="@color/devide_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ly_active"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/ly_age"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年龄"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/v_divide2" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部"
        android:textSize="16dp"
        android:textColor="@color/blue"
        android:layout_alignTop="@+id/ly_age"
        android:layout_toRightOf="@+id/ly_age"
        android:paddingStart="2dp"/>

    <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
        android:id="@+id/sb_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_age"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="40dp"
        android:layout_height="22dp"
        android:text="取消"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:background="@drawable/button_transparent_selector"
        android:layout_below="@+id/sb_age"
        android:layout_toLeftOf="@+id/btn_acknow"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/btn_acknow"
        android:layout_width="40dp"
        android:layout_height="22dp"
        android:text="确认"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:background="@drawable/button_transparent_selector"
        android:layout_below="@+id/sb_age"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        android:layout_marginTop="25dp" />
</RelativeLayout>